<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>ai.tock</groupId>
        <artifactId>tock-nlp-duckling</artifactId>
        <version>25.10.1-SNAPSHOT</version>
    </parent>

    <artifactId>tock-nlp-duckling-client</artifactId>
    <name>Tock Duckling Entities Client</name>
    <description>Client interface for Duckling Entities</description>

    <dependencies>
        <dependency>
            <groupId>ai.tock</groupId>
            <artifactId>tock-nlp-core-service</artifactId>
        </dependency>
        <dependency>
            <groupId>ai.tock</groupId>
            <artifactId>tock-nlp-entity-value</artifactId>
        </dependency>


        <dependency>
            <groupId>com.squareup.retrofit2</groupId>
            <artifactId>retrofit</artifactId>
        </dependency>
        <dependency>
            <groupId>com.squareup.okhttp3</groupId>
            <artifactId>logging-interceptor</artifactId>
        </dependency>
        <dependency>
            <groupId>com.squareup.okhttp3</groupId>
            <artifactId>okhttp</artifactId>
        </dependency>
        <dependency>
            <groupId>com.squareup.retrofit2</groupId>
            <artifactId>converter-jackson</artifactId>
        </dependency>
        <dependency>
            <groupId>io.github.resilience4j</groupId>
            <artifactId>resilience4j-retrofit</artifactId>
        </dependency>
        <dependency>
            <groupId>io.vertx</groupId>
            <artifactId>vertx-core</artifactId>
        </dependency>

    </dependencies>

    <build>
        <sourceDirectory>src/main/kotlin</sourceDirectory>
    </build>

    <!-- Intellij workaround -->
    <profiles>
        <profile>
            <id>ide-only</id>
            <activation>
                <property>
                    <name>idea.version</name>
                </property>
            </activation>
            <dependencies>
                <dependency>
                    <groupId>wit</groupId>
                    <artifactId>duckling</artifactId>
                    <scope>system</scope>
                    <version>${duckling}</version>
                    <systemPath>${project.basedir}/../duckling/lib/duckling-${duckling}-standalone.jar</systemPath>
                </dependency>

                <dependency>
                    <groupId>ai.tock</groupId>
                    <artifactId>tock-nlp-core-service</artifactId>
                </dependency>
                <dependency>
                    <groupId>ai.tock</groupId>
                    <artifactId>tock-nlp-entity-value</artifactId>
                </dependency>


                <dependency>
                    <groupId>com.squareup.retrofit2</groupId>
                    <artifactId>retrofit</artifactId>
                </dependency>
                <dependency>
                    <groupId>com.squareup.okhttp3</groupId>
                    <artifactId>logging-interceptor</artifactId>
                </dependency>
                <dependency>
                    <groupId>com.squareup.okhttp3</groupId>
                    <artifactId>okhttp</artifactId>
                </dependency>
                <dependency>
                    <groupId>com.squareup.retrofit2</groupId>
                    <artifactId>converter-jackson</artifactId>
                </dependency>
                <dependency>
                    <groupId>io.github.resilience4j</groupId>
                    <artifactId>resilience4j-retrofit</artifactId>
                </dependency>
                <dependency>
                    <groupId>io.vertx</groupId>
                    <artifactId>vertx-core</artifactId>
                </dependency>
            </dependencies>
        </profile>
    </profiles>

</project>
